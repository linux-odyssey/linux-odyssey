<h1 class='heading'>Sessions</h1>
<div class='sort'>
  <a href='/sessions?order=asc'><div class='btn'>
      <h3>Ascending</h3>
    </div></a>
  <a href='/sessions?order=desc'><div class='btn'>
      <h3>Descending</h3>
    </div></a>
</div>
<div>
  <table class='data-table'>
    <tr>
      <th>User</th>
      <th>Quest</th>
      <th>Status</th>
      <th>Created At</th>
      <th>Finished At</th>
      <th>Used Time</th>
      <th>Command Count</th>
      <th>Session</th>
    </tr>
    {{#each sessions}}
      <tr>
        <td>{{user}}</td>
        <td>{{quest}}</td>
        <td>{{status}}</td>
        <td>{{createdAt}}</td>
        <td>{{finishedAt}}</td>
        <td>{{usedTime}}</td>
        <td>{{commandCount}}</td>
        <td><a href='/sessions/{{_id}}'>Detail</a></td>
      </tr>
    {{/each}}
  </table>
</div>
<div class='pagination sort'>
  <a href='/sessions?nextKey={{nextKey}}&order={{order}}'><div class='btn'>
      <h3>Next</h3>
    </div></a>
</div>